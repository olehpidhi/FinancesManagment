    function makeTransaction() {
        var data = {
            Id: @Model.Id,
            Amount: $("#Amount").val(),
            Category: $("#Category").val()
        };
        console.log(data);


        $.post("@Url.Action("MakeTransaction")", data, function (data) {
            createAlert(data.status);
            if (data.summary) {
                $("#summary").text(data.summary);
            }
        }).fail(function() {
            createAlert("Failed to make transaction");
        });
    }
</script>