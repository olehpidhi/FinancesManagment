@model FinancesManagment.Models.FinancialAccountMember

@{
    ViewBag.Title = "AddUser";
}

<h2>Add User to @Model.FinancialAccount.Name</h2>

@if (ViewBag.Message != null)
{
    <div id="result" class="alert alert-danger form-group">
        @ViewBag.Message
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("Id", Model.FinancialAccount.Id);
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.FinancialAccountRole.Id, "Role", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Role", new SelectList(FinancesManagment.Models.FinancialAccountMember.Roles, "Id", "Title"), htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ApplicationUser.Email, "User", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ApplicationUser.Email, new { htmlAttributes = new { @id = "Email", @Name="Email", @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<button class="btn btn-default" onclick="window.location.href='@Url.Action("Edit", "FinancialAccount", new { Id = Model.FinancialAccount.Id })'">Back</button>